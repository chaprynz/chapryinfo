<% content_for :head do %>
	<title><%= @category.name %> | chapry.com</title>
	<!-- Open Graph data -->
	<meta property="og:site_name" content="chapry">
	<meta property="og:type" content="website">
	<meta property="og:title" content="<%= @category.name %>">
	<meta property="og:description" content="<%= @category.description %>">
	<meta property="og:image" content="<%= @category.image.url %>">
<% end %>
<%= render partial: "shared/header" %>
<%= render partial: "shared/sidebar" %>

<!-- Overlay effect when opening sidenav on small screens -->
<div class="w3-overlay w3-hide-large" onclick="w3_close()" style="cursor:pointer" title="close side menu"></div>

<!-- Main content: shift it to the right by 250 pixels when the sidenav is visible -->
<div class="w3-main" style="margin-left:250px">
	  <div style="max-width:600px" class="w3-row w3-padding-64">
	    <div class="w3-container">
	      <%= raw @category.content %>
	    </div>
	  </div>

  

 

<!-- END MAIN -->
</div>

<script>
for (var i = 0; i < document.links.length; i++) {
    if (document.links[i].href == document.URL) {
        document.links[i].className = 'active';
    }
}
</script>
